<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssistantFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/assistant_fragment_search_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:drawableStart="@drawable/ic_search"
            android:padding="20dp"
            android:text="Wyszukiwanie"
            android:textSize="18sp" />

        <Button
            android:id="@+id/assistant_fragment_timer_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:drawableStart="@drawable/ic_timer"
            android:padding="20dp"
            android:text="Minutnik"
            android:textSize="18sp" />

        <Button
            android:id="@+id/assistant_fragment_transfer_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:drawableStart="@drawable/ic_transform"
            android:padding="20dp"
            android:text="Konwenter"
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>